{
  "name": "Subscription",
  "description": "订阅",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "action": {
      "type": "string",
      "required": true,
      "description": "动作类型：回复、赞、关注"
    }
  },
  "mixins": {
    "Marks": {
      "createdAt": true
    }
  },
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "user_id"
    },
    "target": {
      "type": "belongsTo",
      "polymorphic": {
        "foreignKey": "target_id",
        "discriminator": "target_type"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
