<%# Style -%>
<%- include_css('//cdn.bootcss.com/wangeditor/2.1.20/css/wangEditor.min.css') %>
<style type="text/css">
  .wangEditor-container {
    border-radius: 4px;
  }

  .wangEditor-menu-container {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
  }

  .rich-text-video {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }
  .rich-text-video iframe,
  .rich-text-video object,
  .rich-text-video embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>

<%# DOM -%>
<textarea
  name="<%- opt.name %>"
  style="<%- opt.style || 'height:200px;' %>"
  hidden><% if(opt.content) { -%>
    <%- opt.content -%>
  <% } -%>
</textarea>
<%- include(_v + '/component/uploader'); %>
<%- include_js('//cdn.bootcss.com/wangeditor/2.1.20/js/wangEditor.min.js') %>
<%- include_js('/component/wang-editor/url-video.js') %>
<%- include_js('/component/form/jq-form-rich-editor.js'); %>
